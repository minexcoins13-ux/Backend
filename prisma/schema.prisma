generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  ACTIVE
  BLOCKED
  PENDING
}

enum TxType {
  DEPOSIT
  WITHDRAWAL
  TRADE_BUY
  TRADE_SELL
  COMMISSION
  INVESTMENT_DEPOSIT
  INVESTMENT_PROFIT
}

enum Currency {
  USDT
  BTC
  ETH
  TRX
  BNB
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(USER)
  status        Status    @default(ACTIVE)
  referral_code String    @unique
  referred_by   String?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  wallet        Wallet[]
  deposits      Deposit[]
  withdrawals   Withdrawal[]
  transactions  TransactionLedger[]
  trades        Trade[]
  commissions   ReferralCommission[] @relation("Referrer")
  investments   Investment[]
  kyc           KYC?
}

model Wallet {
  id        String   @id @default(uuid())
  user_id   String
  currency  Currency
  balance   Float    @default(0.0)
  
  user      User     @relation(fields: [user_id], references: [id])
  
  @@unique([user_id, currency])
}

model Deposit {
  id         String   @id @default(uuid())
  user_id    String
  amount     Float
  currency   Currency
  txid       String   @unique
  status     Status   @default(PENDING)
  created_at DateTime @default(now())

  user       User     @relation(fields: [user_id], references: [id])
}

model Withdrawal {
  id         String   @id @default(uuid())
  user_id    String
  amount     Float
  currency   Currency
  address    String
  status     Status   @default(PENDING)
  created_at DateTime @default(now())

  user       User     @relation(fields: [user_id], references: [id])
}

model TransactionLedger {
  id           String   @id @default(uuid())
  user_id      String
  type         TxType
  currency     Currency
  amount       Float
  reference_id String? // ID of deposit, withdraw, trade, etc.
  created_at   DateTime @default(now())

  user         User     @relation(fields: [user_id], references: [id])
}

model Trade {
  id         String   @id @default(uuid())
  user_id    String
  pair       String   // e.g. "BTC/USDT"
  type       String   // "BUY" or "SELL"
  price      Float
  amount     Float
  fee        Float
  total      Float
  created_at DateTime @default(now())

  user       User     @relation(fields: [user_id], references: [id])
}

model ReferralCommission {
  id          String   @id @default(uuid())
  referrer_id String
  user_id     String   // The user who made the action causing commission
  amount      Float
  currency    Currency
  source      String   // "DEPOSIT", "TRADE"
  created_at  DateTime @default(now())

  referrer    User     @relation("Referrer", fields: [referrer_id], references: [id])
}

model InvestmentPlan {
  id            String   @id @default(uuid())
  name          String
  roi_percent   Float
  duration_days Int
  min_deposit   Float
  max_deposit   Float
  status        Status   @default(ACTIVE)
  created_at    DateTime @default(now())

  investments   Investment[]
}

model Investment {
  id            String    @id @default(uuid())
  user_id       String
  plan_id       String
  amount        Float
  currency      Currency  @default(USDT)
  start_date    DateTime  @default(now())
  end_date      DateTime
  profit        Float     @default(0.0)
  status        Status    @default(ACTIVE) // ACTIVE, COMPLETED

  user          User           @relation(fields: [user_id], references: [id])
  plan          InvestmentPlan @relation(fields: [plan_id], references: [id])
}

model KYC {
  id           String    @id @default(uuid())
  user_id      String    @unique
  document_url String
  document_type String   // "PASSPORT", "ID_CARD"
  status       KycStatus @default(PENDING)
  submitted_at DateTime  @default(now())
  reviewed_at  DateTime?
  admin_note   String?

  user         User      @relation(fields: [user_id], references: [id])
}
